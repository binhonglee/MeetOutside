<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="meetoutside.meetoutsidev2.EditUser">

    <RelativeLayout
        android:id="@+id/edit_general_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/edit_userTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:text="@string/get_email"/>

        <EditText
            android:id="@+id/edit_userEditTxt"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@id/edit_userTxtView"
            android:layout_toRightOf="@id/edit_userTxtView"
            android:textSize="23sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress" />

        <TextView
            android:id="@+id/edit_nameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit_userTxtView"
            android:textSize="23sp"
            android:text="@string/display_name"/>

        <EditText
            android:id="@+id/edit_nameEditTxt"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@id/edit_nameTxtView"
            android:layout_toRightOf="@id/edit_nameTxtView"
            android:layout_alignTop="@id/edit_nameTxtView"
            android:textSize="23sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </RelativeLayout>

    <View
        android:id="@+id/edit_first_divider"
        android:layout_below="@id/edit_general_info"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/edit_password_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_first_divider"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/edit_currentPasswordTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/current_password"/>

        <EditText
            android:id="@+id/edit_currentPasswordEditTxt"
            android:layout_marginTop="-10dp"
            android:layout_alignTop="@id/edit_currentPasswordTxtView"
            android:layout_toEndOf="@id/edit_currentPasswordTxtView"
            android:layout_toRightOf="@id/edit_currentPasswordTxtView"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/edit_newPasswordTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit_currentPasswordTxtView"
            android:textSize="20sp"
            android:text="@string/new_password"/>

        <EditText
            android:id="@+id/edit_newPasswordEditTxt"
            android:layout_marginTop="-10dp"
            android:layout_alignLeft="@id/edit_currentPasswordEditTxt"
            android:layout_alignStart="@id/edit_currentPasswordEditTxt"
            android:layout_alignTop="@id/edit_newPasswordTxtView"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/edit_confirmNewPasswordTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/edit_newPasswordTxtView"
            android:textSize="20sp"
            android:text="@string/confirm_password"/>

        <EditText
            android:id="@+id/edit_confirmNewPasswordEditTxt"
            android:layout_marginTop="-10dp"
            android:layout_alignLeft="@id/edit_currentPasswordEditTxt"
            android:layout_alignStart="@id/edit_currentPasswordEditTxt"
            android:layout_alignTop="@id/edit_confirmNewPasswordTxtView"
            android:textSize="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </RelativeLayout>

    <View
        android:layout_margin="10dp"
        android:layout_below="@id/edit_password_info"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/edit_saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="@string/save"/>

</RelativeLayout>
