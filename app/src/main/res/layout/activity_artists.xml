<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.outsidehacks17.outsidehacks.ArtistsActivity">



    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:layout_height="95dp"
        android:text="Top 3 Artists You're Most Excited to See"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintVertical_bias="0.105" />

    <AutoCompleteTextView
        android:id="@+id/artist1"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:hint="Artist #1:"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:inputType="textAutoComplete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="315dp"

        />


    <AutoCompleteTextView
        android:id="@+id/artist2"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:hint="Artist #2:"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textAutoComplete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/artist1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="43dp"
        app:layout_constraintVertical_bias="0.22" />


    <AutoCompleteTextView
        android:id="@+id/artist3"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:hint="Artist #3:"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="textAutoComplete"
        app:layout_constraintTop_toTopOf="@+id/artist2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="115dp" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginBottom="102dp"
        android:onClick="buttonContinue"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
