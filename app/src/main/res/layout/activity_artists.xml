<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.outsidehacks17.outsidehacks.ArtistsActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="158dp"
        android:text="Top 3 artists you're most excited to see:"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395"
        app:layout_constraintHorizontal_bias="0.493" />

    <AutoCompleteTextView
        android:id="@+id/artist1"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:hint="Artist #1:"
        android:imeOptions="actionNext"
        android:maxLines="1"
        android:inputType="textAutoComplete"
        android:background="@drawable/rounded_edit"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="238dp"

        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <AutoCompleteTextView
        android:id="@+id/artist2"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:hint="Artist #2:"
        android:maxLines="1"
        android:imeOptions="actionNext"
        android:inputType="textAutoComplete"
        android:background="@drawable/rounded_edit"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/artist1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="43dp"
        app:layout_constraintVertical_bias="0.333" />


    <AutoCompleteTextView
        android:id="@+id/artist3"
        android:layout_width="197dp"
        android:layout_height="43dp"
        android:hint="Artist #3:"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:inputType="textAutoComplete"
        android:background="@drawable/rounded_edit"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/artist2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="115dp"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:onClick="buttonContinue"
        android:text="Continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="112dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="420dp"
        android:layout_height="185dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-19dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/osl"
        app:layout_constraintHorizontal_bias="0.32" />

</android.support.constraint.ConstraintLayout>
