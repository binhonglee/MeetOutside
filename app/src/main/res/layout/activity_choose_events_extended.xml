<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.outsidehacks17.outsidehacks.ChooseEventsActivity"
    tools:showIn="@layout/activity_choose_events"
    android:background="@color/colorPrimaryDark"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/whatEvents"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:text="What else do you want to do?"
        android:textAlignment="center"
        android:textSize="28sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintVertical_bias="0.047" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aids_memorial_grove"
        android:text="Aids Memorial Grove"
        android:onClick="selectItem"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintVertical_bias="0.207" />

    <CheckBox
        android:layout_width="139dp"
        android:layout_height="32dp"
        android:id="@+id/botanical_garden"
        android:text="Botanical Garden"
        android:onClick="selectItem"
        tools:layout_editor_absoluteY="256dp"
        tools:layout_editor_absoluteX="135dp" />

    <CheckBox
        android:layout_width="167dp"
        android:layout_height="32dp"
        android:id="@+id/academy_of_sciences"
        android:text="Academy of Sciences"
        android:onClick="selectItem"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.403" />

    <CheckBox
        android:layout_width="156dp"
        android:layout_height="52dp"
        android:id="@+id/conservatory_of_flowers"
        android:text="Conservatory of Flowers"
        android:onClick="selectItem"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.588" />

    <CheckBox
        android:layout_width="148dp"
        android:layout_height="32dp"
        android:id="@+id/de_young_museum"
        android:text="De Young Museum"
        android:onClick="selectItem"
        tools:layout_editor_absoluteY="439dp"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:layout_width="169dp"
        android:layout_height="32dp"
        android:id="@+id/japanese_tea_garden"
        android:text="Japanese Tea Garden"
        android:onClick="selectItem"
        tools:layout_editor_absoluteY="471dp"
        tools:layout_editor_absoluteX="248dp" />

    <CheckBox
        android:layout_width="97dp"
        android:layout_height="32dp"
        android:id="@+id/eco_lands"
        android:text="Eco Lands"
        android:onClick="selectItem"
        tools:layout_editor_absoluteY="398dp"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:layout_width="137dp"
        android:layout_height="32dp"
        android:id="@+id/art_and_paintings"
        android:text="Art and paintings"
        android:onClick="selectItem"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintVertical_bias="0.308" />

    <Button
        android:id="@+id/eventsDone"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:onClick="doneButton"
        android:text="I'm done!"
        android:textAlignment="textStart"
        tools:layout_editor_absoluteY="398dp"
        tools:layout_editor_absoluteX="172dp" />

</android.support.constraint.ConstraintLayout>
